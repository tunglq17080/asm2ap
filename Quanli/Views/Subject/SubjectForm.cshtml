@model Quanli.Models.Subject
@{
    ViewBag.Title = "Subject form";
}

<h2>Subject form</h2>
@using (Html.BeginForm("Save", "Subject"))// goi save trong controler
{
    <div class="form-group-">
        @Html.LabelFor(m => m.name)
        @Html.TextAreaFor(m => m.name, new { @class = "form-control" })
    </div>
    <div class="form-group-">
        @Html.LabelFor(m => m.Information)
        @Html.TextAreaFor(m => m.Information, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Id)
    if(Model != null )
    {
        <p>@Html.ActionLink("Delete", "Delete", "Subject", new { id = Model.Id }, null)</p>
    }
    <button class="btn btn-default" type="submit">Save</button>

}