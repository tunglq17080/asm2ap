@model Quanli.Models.Trainee
@{
    ViewBag.Title = "InformationForm";
}

<h2>Information</h2>
@using (Html.BeginForm("Save", "TraineeAccount"))
{
    <p>@Model.Email</p>
    <div class="form-group-">
        @Html.LabelFor(m => m.Name)
        @Html.TextAreaFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group-">
        @Html.LabelFor(m => m.DOB)
        @Html.TextAreaFor(m => m.DOB, new { @class = "form-control" })
    </div>
    <div class="form-group-">
        @Html.LabelFor(m => m.TOEIC)
        @Html.TextAreaFor(m => m.TOEIC, new { @class = "form-control" })
    </div>
    <div class="form-group-">
        @Html.LabelFor(m => m.TOEIC)
        @Html.TextAreaFor(m => m.TOEIC, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => Model.Email)
    <button class="btn btn-default" type="submit">Save</button>
}

